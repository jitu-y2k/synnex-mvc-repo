@page "{id}"
@model UpdateTeacherModel
@{
}

<h2>Update Teacher</h2>

<form method="post">
    <input type="hidden" asp-for="Teacher.Id"/>
    <div class="mt-3">
        <label asp-for="Teacher.Name">Name</label>
        <input asp-for="Teacher.Name" class="form-control" />
    </div>

    <div class="mt-3">
        <label asp-for="Teacher.Subject">Subject</label>
        <input asp-for="Teacher.Subject" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
